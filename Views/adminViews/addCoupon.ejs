<%- include('../layouts/adminHeader.ejs') %>

<!-- partial -->
<div class="main-panel">
<div class="content-wrapper">
<div class="page-header">
<h3 class="page-title">Add Coupon</h3>
<nav aria-label="breadcrumb">
<ol class="breadcrumb">
  <li class="breadcrumb-item"><a href="/admin/coupon">Coupon Management</a></li>
  <li class="breadcrumb-item active" aria-current="page">Add Coupon</li>
</ol>
</nav>
</div>
<div class="row">
    <div class="col-lg-3"></div>
<div class="col-lg-6 grid-margin stretch-card">
<div class="card">
  <div class="card-body">
    <h4 class="card-title">Enter the details of the new coupon</h4>
    <form class="forms-sample" action="/admin/addCoupon" method="POST">

      <div class="form-group">
        <label for="exampleInputName1">Coupon Code</label>
        <div class="input-group">
            <input type="text" class="form-control"  aria-label="Recipient's username" aria-describedby="basic-addon2" id="couponName" name="couponCode">
            <div class="input-group-append">
                <button class="btn btn-sm btn-primary" type="button" onclick="generateCoupon()">Generate Code</button>
            </div>
        </div>
      </div>

      <div class="form-group">
        <label for="exampleInputName1">Min Purchase</label>
        <div class="input-group">
          <div class="input-group-prepend">
            <span class="input-group-text bg-primary text-white">₹</span>
          </div>
          <input type="text" class="form-control" aria-label="Amount (to the nearest dollar)" name="minPurchase">
          <div class="input-group-append">
            <span class="input-group-text">.00</span>
          </div>
        </div>
      </div>

      <div class="form-group">
        <label for="exampleInputName1">Max Discount</label>
        <div class="input-group">
          <div class="input-group-prepend">
            <span class="input-group-text bg-primary text-white">₹</span>
          </div>
          <input type="text" class="form-control" aria-label="Amount (to the nearest dollar)" name="maxDiscountValue">
          <div class="input-group-append">
            <span class="input-group-text">.00</span>
          </div>
        </div>
      </div>

      <div class="form-group">
        <label for="exampleInputName1">Discount</label>
        <div class="input-group">
          <input type="text" class="form-control" aria-label="Amount (to the nearest dollar)" name="minDiscountPercentage">
          <div class="input-group-append">
            <span class="input-group-text">%</span>
          </div>
        </div>
      </div>

      <div class="form-group">
        <label for="exampleInputName1">Validity</label>
        <input type="date" class="form-control" name="validity">
        <p id="error1" class="text-danger"></p>
      </div>
      
      <div class="form-group">
        <label for="exampleTextarea1">Description</label>
        <textarea class="form-control" rows="4" name="description"></textarea>
        <p id="error3" class="text-danger"></p>
      </div>
      <% if (typeof message !== 'undefined') { %>
                        <center>
                        <div class="audun_warn">
                            <i class="fa fa-exclamation-triangle" aria-hidden="true"></i>
                            <%= message %>
                        </div>
                        </center>
                    <% } %>
      
      <button type="submit" class="btn btn-primary mr-2" onclick="validate()">Submit</button>
      <button class="btn btn-dark">Cancel</button>
    </form>
  </div>
</div>
</div>
</div>
</div>
</div>

  <!-- content-wrapper ends -->
  <!-- partial:../../partials/_footer.html -->
  <%- include('../layouts/adminFooter.ejs') %>

  <script>
    function generateCoupon() {
      $.ajax({
        url: '/admin/generateCouponCode',
        method: 'GET',
        success: (response) => {
          document.getElementById('couponName').value = response.couponCode;
        }
  
      })
    }
  </script>
