	<%- include('../layouts/adminHeader.ejs') %>


  <style>
    .image {
      width: 100px;
      height: 100px;
      border: 1px solid;
      border-radius: 4px;
      margin-right: 50px;
      margin-left: 50px;
    }
  </style>
  <!-- partial -->
  <div class="main-panel">
    <div class="content-wrapper">
      <div class="page-header">
        <h3 class="page-title">Product Management</h3>
        <nav aria-label="breadcrumb">
          <ol class="breadcrumb">
            <li class="breadcrumb-item">
              <a href="/admin/product">Product Management</a>
            </li>
            <li class="breadcrumb-item active" aria-current="page">Update Product</li>
          </ol>
        </nav>
      </div>
      <div class="row">
        <div class="col-8 grid-margin stretch-card">
          <div class="col-3"></div>
          <div class="card col-lg-6">
            <div class="card-body">
              <h4 class="card-title">Edit the details of the existing product</h4>
              <form class="forms-sample" action="/admin/updateProduct" method="POST" enctype="multipart/form-data">
                <div class="form-group">
                  <label for="exampleInputName1">Name</label>
                  <input type="text" class="form-control" id="exampleInputName1" placeholder="Name" name="name" value="<%= product.name %>" required>
                </div>
                <div class="form-group">
                  <label for="exampleInputEmail3">Brand</label>
                  <input type="text" class="form-control" id="exampleInputEmail3" placeholder="Brand" name="brand" value="<%= product.brand %>" required>
                </div>
                <div class="form-group">
                  <label for="exampleSelectGender">Category</label>     
                  <select class="form-control" id="exampleSelectGender" name="category">
                    <% category.forEach(function(cat) { %>
                      <option value="<%= cat._id %>" <%= product.category === cat._id ? 'selected' : '' %>><%= cat.name %></option>
                    <% }); %>
                  </select>
                </div>
                <div class="form-group">
                  <label for="exampleInputEmail3">Price</label>
                  <input type="number" class="form-control" id="exampleInputEmail3" placeholder="Price" name="price" value="<%= product.price %>">
                </div>
                <br>
                <div class="row">
                  <div class="col-xl-lg-4-md-12 ml-5">
                    <img class="image" src="/product-images/<%= product.image[0] %>" alt="Product Image">
                  </div>
                  <div class="col-xl-lg-4-md-12 ">
                    <img class="image" src="/product-images/<%= product.image[1] %>" alt="Product Image">
                  </div>
                  <div class="col-xl-lg-4-md-12">
                    <img class="image" src="/product-images/<%= product.image[2] %>" alt="Product Image">
                  </div>
                </div>
                <br>
                <div class="form-group">
                  <label for="productImage">Product Main Image:</label>
                  <input type="file" class="form-control" name="image1" id="image"> 
                </div>
                <br> 
                <div class="form-group">
                  <label for="productImage">Product Sub Images:</label>
                  <input type="file" class="form-control" multiple name="image2" id="image"> 
                </div>
                <div class="form-group">
                  <label for="exampleTextarea1">Description</label>
                  <textarea class="form-control" id="exampleTextarea1" rows="4" name="description"><%= product.description %></textarea>
                </div>
                <input type="hidden" name="id" value="<%= product._id %>">
                <button type="submit" class="btn btn-primary mr-2">Submit</button>
                <button class="btn btn-dark">Cancel</button>
              </form>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div> 

