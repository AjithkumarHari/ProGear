<%- include('../layouts/adminHeader.ejs') %>

<!-- partial -->
<div class="main-panel">
<div class="content-wrapper">
<div class="page-header">
<h3 class="page-title">Update Banner</h3>
<nav aria-label="breadcrumb">
<ol class="breadcrumb">
  <li class="breadcrumb-item"><a href="/admin/banner">Banner Management</a></li>
  <li class="breadcrumb-item active" aria-current="page">Update Banner</li>
</ol>
</nav>
</div>
<div class="row">
    <div class="col-3"></div>
<div class="col-lg-6 grid-margin stretch-card">
<div class="card">
  <div class="card-body">
    <h4 class="card-title">Edit the details of the existing banner</h4>
    <form class="forms-sample" action="/admin/updateBannerPost" method="POST">
      <div class="form-group">
        <label for="exampleInputName1">Title</label>
        <input type="text" class="form-control" id="exampleInputName1" name="title" value="<%= banner[0].title %>">
      </div>
      <div class="form-group">
        <label for="exampleTextarea1">Description</label>
        <textarea class="form-control" id="exampleTextarea1" rows="4" name="description"> <%= banner[0].description %></textarea>
      </div>

      <div class="form-group">
        <label for="productImage">Banner Image:</label>
        <input type="file" class="form-control" name="image" id="image"> 
      </div>

      <input type="hidden" name="id" value="<%= banner[0]._id %>">

      <% if (typeof message !== 'undefined') { %>
        <center>
        <div class="audun_warn">
            <i class="fa fa-exclamation-triangle" aria-hidden="true"></i>
            <%= message %>
        </div>
        </center>
    <% } %>
      <button type="submit" class="btn btn-primary mr-2">Submit</button>
      <button class="btn btn-dark">Cancel</button>
    </form>
  </div>
</div>
</div>
</div>
</div>
</div>

  <!-- content-wrapper ends -->
