            <form class="forms-sample" action="/admin/updateCategory" method="POST">
              <div class="form-group">
                <label for="exampleInputName1">Name</label>
                <input type="text" class="form-control" id="exampleInputName1" name="name" value="<%= category.name %>" required>
              </div>
              <div class="form-group">
                <label for="exampleTextarea1">Description</label>
                <textarea class="form-control" id="exampleTextarea1" rows="4" name="des" required><%= category.description %></textarea>
              </div>

              <input type="hidden" name="id" value="<%= category._id %>">
              <button type="submit" class="btn btn-primary mr-2">Submit</button>
              <button class="btn btn-dark">Cancel</button>
            </form>
          </div>
        </div>
      </div>
