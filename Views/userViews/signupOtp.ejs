</head>
<body>
    <!-- Start Header Area -->
    <header class="header_area sticky-header">
    </header>

    <!--================Login Box Area =================-->
    <section class="login_box_area section_gap">
        <div class="container">
            <div class="row justify-content-center">
                <div class="col-lg-6 col-md-8">
                    <div class="login_form_inner ">
                        <h3>Enter OTP</h3>
                        <form class="row login_form" action="/signupOtpVerify" method="POST" id="contactForm" novalidate="novalidate">
                            <div class="col-12 form-group">
                                <input type="text" class="form-control" id="otp" name="otp" placeholder="OTP" onfocus="this.placeholder = ''" onblur="this.placeholder = 'OTP'">
                            </div>
                            <div class="col-12 form-group">
                                <% if (typeof message !== 'undefined') { %>
                                <center>
                                <div class="audun_warn">
                                    <i class="fa fa-exclamation-triangle" aria-hidden="true"></i>
                                    <%= message %>
                                </div>
                                </center>
                                <% } %>
                            </div> 
                            <div class="col-12 form-group">
                                <button type="submit" value="submit" class="primary-btn">Submit</button>
                            </div>
                            <div class="col-12 form-group" id="countdown"></div>
                            <div class="col-12 form-group">
                                <a href="/resendSignupOtp"  id="resendLink" >Resend OTP</a>
                            </div>
                        </form>
                        <br><br><br>
                    </div>
                </div>
            </div>
        </div>
    </section>
    <!--================End Login Box Area =================-->


    <script src="js/vendor/jquery-2.2.4.min.js"></script>
