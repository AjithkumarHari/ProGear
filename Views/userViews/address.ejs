                                                <input type="number" class="popup-form__input" value="<%= address.number %>" name="number">
                                                <textarea class="popup-form__input" name="houseadd"><%= address.houseAddress %></textarea>
                                                <input type="text" class="popup-form__input" value="<%= address.city %>" name="city">
                                                <input type="text" class="popup-form__input" value="<%= address.street %>" name="street">
                                                <input type="number" class="popup-form__input" value="<%= address.pin %>" name="pin">

                                                <button type="submit" class="popup-form__submit">Save</button>
                                            </form>
                                        </div>
                                    </div>
                                <a  id="btn" href="/deleteAddress?id=<%= address.id %>" >Delete</a>  
                                </section>

                            </div>
                            <% }); %>
