        .close-button {
            position: absolute;
            margin-right: 10px;
            top: -30;
            right: 0;
            background: none;
            border: none;
            padding: 0;
            border: 0;
            width: 25px;
            height: 45px;
            outline: none;
            cursor: pointer;
